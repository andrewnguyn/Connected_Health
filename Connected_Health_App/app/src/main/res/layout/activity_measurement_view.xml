<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="au.edu.adelaide.connected_health_app.MeasurementViewActivity"
    android:orientation="vertical"
    android:background="#ff44fffa">

    <include layout="@layout/quick_menu_bar"
        android:id="@+id/quickMenuBar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/home_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/homeButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Measurement"
            android:id="@+id/measurementHeading"
            android:autoText="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <WebView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/webviewGraphTest"
            android:layout_below="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

</LinearLayout>

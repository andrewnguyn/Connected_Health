<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="au.edu.adelaide.connected_health_app.MedicalNotesViewActivity"
    android:orientation="vertical">

    <!--Quick Menu Bar-->
    <include layout="@layout/quick_menu_bar"
        android:id="@+id/quickMenuBar"/>

    <!--Padding-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/small_margin"
        android:paddingLeft="@dimen/small_margin"
        android:paddingTop="@dimen/small_margin"
        android:paddingBottom="@dimen/small_margin"
        android:background="@android:color/darker_gray">

        <!--Content-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/white"
            android:id="@+id/main_layout">

            <!--Main Display-->
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_weight="0.85"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp">

                <RelativeLayout
                    android:onClick="goToSingleItemView"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_red_light"
                    android:id="@+id/preview0"
                    android:layout_margin="5dp">

                    <include layout="@layout/generic_text_icon_preview"
                        android:id="@+id/test0"
                        />
                <!--
                    <TextView
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/preview_text0"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:padding="5dp" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:id="@+id/icon0"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
-->
                </RelativeLayout>
                <RelativeLayout
                    android:onClick="goToSingleItemView"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_red_light"
                    android:id="@+id/preview1"
                    android:layout_margin="5dp">

                    <TextView
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/preview_text1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:padding="5dp" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:id="@+id/icon1"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:onClick="goToSingleItemView"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_red_light"
                    android:id="@+id/preview2"
                    android:layout_margin="5dp">

                    <TextView
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/preview_text2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:padding="5dp"
                        android:autoText="false" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:id="@+id/icon2"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>
            </LinearLayout>
            <!--End of Main Display-->

            <!--Bottom Buttons-->
            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent">

                    <Button
                        android:onClick="goToPreviousPage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Newer"
                        android:id="@+id/left_nav_button"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@drawable/previous_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"></RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent">

                    <Button
                        android:onClick="goToNewItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create"
                        android:id="@+id/new_button"
                        android:drawableLeft="@drawable/new_icon"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"></RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent">

                    <Button
                        android:onClick="goToNextPage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Older"
                        android:id="@+id/right_nav_button"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:drawableRight="@drawable/next_icon"/>
                </RelativeLayout>
            </LinearLayout>
            <!--End of Buttons-->
        </LinearLayout>
        <!--End Content-->
    </RelativeLayout>
</LinearLayout>

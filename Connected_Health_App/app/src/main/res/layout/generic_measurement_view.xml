<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="au.edu.adelaide.connected_health_app.MeasurementViewActivity"
    android:orientation="vertical"
    android:background="@android:color/darker_gray">

    <include layout="@layout/quick_menu_bar"
        android:id="@+id/quickMenuBar"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/small_margin"
        android:id="@+id/main_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Title-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Measurement: Steps"
                android:id="@+id/measurementHeading"
                android:textSize="25pt"
                android:textColor="#006600" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            >
        <!--Measurement Info -->
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Measurement date: 7 Mar, 17:13\n\nYour steps count is below the daily average for your age group.\n\nImportant:\nA registered nurse will arrange a checkup over the phone shortly. It is recommended that you try to increase your activity levels and reach 2000 steps as a goal."
                android:id="@+id/textView4"
                android:textColor="#0000BB"
                android:background="#BBEEFF"
                android:layout_margin="10dp"
                android:textSize="13pt"
                />

            <!--Measurement Graph-->
            <WebView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/webviewGraphTest"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.6" />

        </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>



















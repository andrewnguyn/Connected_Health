<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="au.edu.adelaide.connected_health_app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"> <!-- needed for all activities to be run in landscape -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MeasurementViewActivity"
            android:label="@string/title_activity_measurement_view"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="au.edu.adelaide.connected_health_app.MainActivity" />
        </activity>
        <activity
            android:name=".InformationViewActivity"
            android:label="@string/title_activity_information_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="au.edu.adelaide.connected_health_app.MainActivity" />
        </activity>
        <activity
            android:name=".QuestionnaireViewActivity"
            android:label="@string/title_activity_questionnaire_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="au.edu.adelaide.connected_health_app.MainActivity" />
        </activity>
        <activity
            android:name=".ProfileViewActivity"
            android:label="@string/title_activity_profile_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="au.edu.adelaide.connected_health_app.MainActivity" />
        </activity>
    </application>

</manifest>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="au.edu.adelaide.connected_health_app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" > <!-- needed for all activities to be run in landscape -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MeasurementViewActivity"
            android:label="@string/title_activity_measurement_view"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="au.edu.adelaide.connected_health_app.MainActivity" />
        </activity>
        <activity
            android:name=".InformationViewActivity"
            android:label="@string/title_activity_information_view"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="au.edu.adelaide.connected_health_app.MainActivity" />
        </activity>
        <activity
            android:name=".QuestionnaireViewActivity"
            android:label="@string/title_activity_questionnaire_view"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="au.edu.adelaide.connected_health_app.MainActivity" />
        </activity>
        <activity
            android:name=".ProfileViewActivity"
            android:label="@string/title_activity_profile_view"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="au.edu.adelaide.connected_health_app.MainActivity" />
        </activity>
        <activity
            android:name=".ProfileEditActivity"
            android:label="@string/title_activity_profile_edit"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="au.edu.adelaide.connected_health_app.MainActivity" />
        </activity>
        <activity
            android:name=".ProfilePanelsActivity"
            android:label="@string/title_activity_profile_panels" >
        </activity>
        <activity
            android:name=".JournalEntriesActivity"
            android:label="@string/title_activity_journal_entries" >
        </activity>
        <activity
            android:name=".JournalViewActivity"
            android:label="@string/title_activity_journal_view" >
        </activity>
        <activity
            android:name=".MedicalNotesViewActivity"
            android:label="@string/title_activity_medical_notes_view" >
        </activity>
        <activity
            android:name=".MedicalNoteSingleViewActivity"
            android:label="@string/title_activity_medical_note_single_view" >
        </activity>
        <activity
            android:name=".SingleItemViewActivity"
            android:label="@string/title_activity_single_item_view" >
        </activity>
        <activity
            android:name=".QuestionViewActivity"
            android:label="@string/title_activity_question_view" >
        </activity>
        <activity
            android:name=".MeasurementStepsViewActivity"
            android:label="@string/title_activity_measurement_steps_view" >
        </activity>
    </application>

</manifest>
